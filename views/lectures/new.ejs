<!-- views/lectures/new.ejs -->
<% layout('layouts/boilerplate') %>
<h1>Create a New Lecture</h1>

<form action="/lectures" method="POST" enctype="multipart/form-data">
    <label for="title">Lecture Title:</label>
    <input type="text" name="title" id="title" required>

    <label for="description">Lecture Description:</label>
    <textarea name="description" id="description" required></textarea>

    <label for="video">Upload a Video:</label>
    <input type="file" name="video" accept="video/*" required>

    <button type="submit">Create Lecture</button>
</form>
